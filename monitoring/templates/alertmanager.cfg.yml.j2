---
global:
  resolve_timeout: 5m
route:
  group_by: [Alertname]
  repeat_interval: 1h
  receiver: slack-notifications

# For slack notifications, replace the variables/placeholders with your data
- name: slack
  slack_configs:
  - api_url: https://hooks.slack.com/services/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
    channel: "#geral"
    send_resolved: true
    title: "[Alert] {{ .GroupLabels.alertname }}"
    text: "summary: {{ .CommonAnnotations.summary }}\ndescription: {{ .CommonAnnotations.description }}"

inhibit_rules:
- source_match:
    severity: critical
  target_match:
    severity: warning
  equal:
  - Alertname
